<body>
    <h1>Update Post</h1>
    <!-- <form action="/posts/update?_method=PUT" method="POST"  enctype="multipart/form-data"> -->
    <form action="/posts/update?_method=PUT" method="POST">
        <input type="hidden" name="user" value=<%= user %>>
        <input type="hidden" name="post" value=<%= post %>>
        <p>제목</p>
        <input name="title" required>
        <p>내용</p>
        <textarea name="content" required rows="30" cols="60">글을 써주세요.</textarea>
        <!-- <input type="file" name="files" multiple> -->
        <button type="submit">저장</button>
    </form>
</body>
</html>